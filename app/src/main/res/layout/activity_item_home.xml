<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8E8E8"
    tools:context=".HomeItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--동물 정보 1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="공고 중"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:background="#55000000"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--동물 정보 2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardview1"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[고양이]믹스묘" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kind"
                        android:text="수컷" />

                    <TextView
                        android:id="@+id/tv_neuter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_sex"
                        android:text="(중성화 X)" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_neuter"
                        android:text="2019(년생)" />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_age"
                        android:text="1(Kg)" />

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_weight"
                        android:text="흰색, 회색" />

                    <TextView
                        android:id="@+id/tv_title_special_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_color"
                        android:text="특이사항:" />

                    <TextView
                        android:id="@+id/tv_special_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_title_special_mark"
                        android:layout_toRightOf="@id/tv_title_special_mark"
                        android:text="삵에 물려가는 고양이를 구조한 상황, 긴급 치료 완료 보호 중" />

                    <TextView
                        android:id="@+id/tv_title_happen_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_special_mark"
                        android:text="접수일:" />

                    <TextView
                        android:id="@+id/tv_happen_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_title_happen_date"
                        android:layout_toRightOf="@id/tv_title_happen_date"
                        android:text="1999-01-01" />

                    <TextView
                        android:id="@+id/tv_title_happen_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_happen_date"
                        android:text="발견장소:" />

                    <TextView
                        android:id="@+id/tv_happen_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_title_happen_place"
                        android:layout_toRightOf="@id/tv_title_happen_place"
                        android:text="군위군 소보면 달산리 773(법주사)" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_happen_place"
                        app:dividerColor="#CDCDCD"/>

                    <TextView
                        android:id="@+id/tv_title_notice_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_happen_place"
                        android:text="공고번호:" />

                    <TextView
                        android:id="@+id/tv_notice_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_title_notice_num"
                        android:layout_toRightOf="@id/tv_title_notice_num"
                        android:text="경북-군위-2022-00019" />

                    <TextView
                        android:id="@+id/tv_title_notice_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_notice_num"
                        android:text="공고기간:" />

                    <TextView
                        android:id="@+id/tv_notice_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_title_notice_period"
                        android:layout_toRightOf="@id/tv_title_notice_period"
                        android:text="1999-01-01" />

                    <TextView
                        android:id="@+id/tv_notice_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_notice_start_date"
                        android:layout_toRightOf="@id/tv_notice_start_date"
                        android:text="~ 1999-01-15" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--보호소 정보-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_section2"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_title_care_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보호센터:"/>
                    <TextView
                        android:id="@+id/tv_care_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우성동물병원"
                        android:layout_toRightOf="@id/tv_title_care_name"
                        android:layout_alignTop="@id/tv_title_care_name"/>
                    <TextView
                        android:id="@+id/tv_care_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경상북도 군위군 군위읍 중앙1길 17 (군위읍)"
                        android:layout_alignLeft="@id/tv_care_name"
                        android:layout_below="@id/tv_care_name"/>
                    <TextView
                        android:id="@+id/tv_care_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Tel: 054-380-6183)"
                        android:layout_alignLeft="@id/tv_care_addr"
                        android:layout_below="@id/tv_care_addr"/>
                    <TextView
                        android:id="@+id/tv_title_charge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="담당부서:"
                        android:layout_below="@id/tv_care_tel"/>
                    <TextView
                        android:id="@+id/tv_charge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="군위군"
                        android:layout_alignBaseline="@id/tv_title_charge_name"
                        android:layout_toRightOf="@id/tv_title_charge_name"/>
                    <TextView
                        android:id="@+id/tv_charge_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Tel: 054-380-6183)"
                        android:layout_alignLeft="@id/tv_charge_name"
                        android:layout_below="@id/tv_charge_name"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>